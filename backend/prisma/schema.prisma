generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_DB_URL")
}

model posts {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  abstract String
  slug     String @unique
  title    String
  url      String
}

model users {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  admin Boolean
  email String @unique
  read  Boolean
}
